<?xml version="1.0"?>
<PropertyList>
  <path>cessna_gear_control.ac</path>

  <animation>
    <type>material</type>
    <object-name>gearhandle</object-name>
    <emission>
      <red>0.45</red>
      <green>0.09</green>
      <blue>0.000045</blue>
      <factor-prop>/controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>gearhandle</object-name>
    <property>controls/gear/gear-handle-down</property>
    <factor>40</factor>
    <offset-deg>-20</offset-deg>
    <center>
      <x-m>-0.054</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>select</type>
    <object-name>light-gear-down-on</object-name>
    <condition><and>
      <greater-than>
        <property>gear/gear[0]/position-norm</property>
        <value>0.999</value>
      </greater-than>
      <greater-than>
        <property>gear/gear[1]/position-norm</property>
        <value>0.999</value>
      </greater-than>
      <greater-than>
        <property>gear/gear[2]/position-norm</property>
        <value>0.999</value>
      </greater-than>
    </and></condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>light-gear-up-on</object-name>
    <condition><and>
      <less-than>
        <property>gear/gear[0]/position-norm</property>
        <value>0.001</value>
      </less-than>
      <less-than>
        <property>gear/gear[1]/position-norm</property>
        <value>0.001</value>
      </less-than>
      <less-than>
        <property>gear/gear[2]/position-norm</property>
        <value>0.001</value>
      </less-than>
    </and></condition>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>gearhandle</object-name>
    <repeatable>false</repeatable>
    <action>
      <button>0</button>
      <binding>
        <command>nasal</command>
        <script>controls.gearToggle()</script>
      </binding>
    </action>
  </animation>
</PropertyList>
