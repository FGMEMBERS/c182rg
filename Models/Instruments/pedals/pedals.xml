<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList> 

  <path>pedals.ac</path> 

  <animation>
    <object-name>Pedal-L</object-name>
    <object-name>Pedal-R</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>Pedal-L</object-name>
    <property>/surface-positions/rudder-pos-norm</property>
    <factor> 0.1 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Pedal-L</object-name>
    <property>controls/gear/brake-left</property>
    <factor> -5 </factor>
    <center>
      <x-m> -0.1 </x-m>
      <y-m>  0.0 </y-m>
      <z-m> -0.9 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>Pedal-R</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> -0.1 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Pedal-R</object-name>
    <property>controls/gear/brake-right</property>
    <factor> -5 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
    <center>
      <x-m> -0.1 </x-m>
      <y-m>  0.0 </y-m>
      <z-m> -0.9 </z-m>
    </center>
  </animation>

</PropertyList>

