<?xml version="1.0" encoding="ISO-8859-1"?>

  <!--
  ELT based on an Artex ELT (now Cobham)
  http://www.acrelectronics.com/products/b/aviation/catalog/elt-remote-switches/remote-switch-standard
  Author: Pavel Cueto
  License: GPL

  Designed to work with the "ELTmessage.nas" file provided in the instrument folder.
  Be sure to link the Nasal in your -set file, typing:
  <nasal>
    <ELT>
      <file>YOUR/INSTRUMENT/FOLDER/ROUTE/HERE/ELTmessage.nas</file>
    </ELT>
  </nasal>
  -->

<PropertyList>

  <path>ArtexELT.ac</path>

  <animation>
  <!-- Objets opaques -->
    <object-name>Base</object-name>
    <object-name>BaseSwitch</object-name>
    <object-name>Switch</object-name>
    <object-name>SwitchUp</object-name>
    <object-name>SwitchDown</object-name>
    <object-name>vis</object-name>
    <object-name>vis001</object-name>
    <object-name>Light-ON</object-name>
    <object-name>Light-OFF</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>SwitchUp</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>instrumentation/elt/armed</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>instrumentation/elt/on</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>SwitchDown</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable> 
      <binding>
        <command>property-assign</command>
        <property>instrumentation/elt/test</property>
        <value type="bool">true</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/elt/armed</property>
        <value type="bool">false</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/elt/on</property>
        <value type="bool">false</value>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
      <mod-up>
        <binding>
          <command>property-assign</command>
          <property>/instrumentation/elt/test</property>
          <value type="bool">false</value>
        </binding>
        <binding>
          <command>property-assign</command>
          <property>instrumentation/elt/armed</property>
          <value type="bool">true</value>
        </binding>
      </mod-up>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Switch</object-name>
    <factor>-15</factor>
    <property>instrumentation/elt/test</property>
    <center>
      <x-m> 0.003 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.000 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>    
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Switch</object-name>
    <property>instrumentation/elt/on</property>
    <factor> 15 </factor>
    <center>
      <x-m> 0.003 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.000 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>    
  </animation>

  <animation>
    <type>select</type>
    <object-name>Light-ON</object-name>
    <condition>
      <or>
        <property>instrumentation/elt/on</property>
        <property>instrumentation/elt/test</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Light-OFF</object-name>
    <condition>
      <not>
        <or>
          <property>instrumentation/elt/on</property>
          <property>instrumentation/elt/test</property>
        </or>
      </not>
    </condition>
  </animation>

</PropertyList>
