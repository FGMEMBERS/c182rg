<?xml version="1.0" encoding="ISO-8859-1"?>

 <!-- based on fwd tank Syd Adams -->
 <PropertyList>
   
   <path>fuel-qty.ac</path>
   
   <animation>
     <object-name>FuelQTY.fond</object-name>
     <object-name>FuelQTY.face</object-name>
     <object-name>FuelQTY.tank</object-name>
     <object-name>FuelQTY.needle</object-name>
     
     <object-name>FuelQTY.vitre</object-name>
   </animation>
   
   <animation>
     <type>noshadow</type>
     <object-name>FuelQTY.vitre</object-name>
   </animation>
   
   <animation>
     <type>shader</type>
     <shader>chrome</shader>
     <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
     <object-name>FuelQTY.vitre</object-name>
   </animation>
   
   <!-- working for Rembrandt -->
   <effect>
     <inherits-from>Effects/model-transparent</inherits-from>
     <condition>
       <property>sim/rendering/rembrandt/enabled</property>
     </condition>
     <object-name>FuelQTY.vitre</object-name>
   </effect>
   
   <animation>
     <type>material</type>
     <object-name>FuelQTY.face</object-name>
     <object-name>FuelQTY.tank</object-name>
     <object-name>FuelQTY.needle</object-name>
     <condition>
       <property>/controls/lighting/instrument-lights</property>
     </condition>
     <emission>
       <red>   0.80 </red>
       <green> 0.50 </green>
       <blue>  0.50 </blue>
     </emission>
   </animation>
   
   <animation>
     <type>textranslate</type>
     <object-name>FuelQTY.tank</object-name>
     <property>sim/signals/fdm-initialized</property>
     <factor> 0.0755 </factor>
     <axis>
       <x>  0 </x>
       <y> -1 </y>
       <z>  0 </z>
     </axis>
   </animation>
   
   <!-- **** Adjusted for Nord 2502 tanks *** -->
   <animation>
     <type>rotate</type>
     <object-name>FuelQTY.needle</object-name>
     <property>consumables/fuel/tank[1]/level-lbs</property>
     <interpolation>
     <entry>
       <ind>   0 </ind>
       <dep>   0 </dep>
     </entry>
     <entry>
       <ind> 900 </ind>
       <dep> 320 </dep>
     </entry>
   </interpolation>
   <axis>
     <x> -1 </x>
     <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
